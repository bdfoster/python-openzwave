#!/usr/bin/make -f

%:
	dh $@ --with python2

override_dh_auto_clean:
	true

override_dh_auto_configure:
	patch -t -p1 <debian/patches/setup.py
	dh_auto_configure

override_dh_clean:
	patch -t -s -R -p1 <debian/patches/setup.py
	dh_clean

override_dh_auto_installdocs:
	cd docs && make html
	dh_auto_install
	dh_auto_installdocs
